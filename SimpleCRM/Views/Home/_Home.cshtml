<div class="container" ng-controller="ClientController" ng-init="Refresh()">
    <div class="col-md-8">
        <div class="panel panel-default" style="height: 500px">
            <div class="panel-heading">Clients table</div>
            <div class="panel-body">
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>FirstName</th>
                            <th>LastName</th>
                            <th>Age</th>
                            <th>Gender</th>
                            <th>City</th>
                        </tr>
                    </thead>
                    <tr ng-repeat="client in clients" ng-click="chooseClient(client)">
                        <td>{{client.FirstName}}</td>
                        <td>{{client.LastName}}</td>
                        <td>{{client.Age}}</td>
                        <td>{{GetGender(client.Gender)}}</td>
                        <td>{{client.City}}</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-default" style="height: 500px; padding: 30px;">
            <form class="input-group" style="padding: 10px;">
                <input type="text" ng-model="currentClient.FirstName" class="form-control" placeholder="FirstName" />
                <input type="text" ng-model="currentClient.LastName" class="form-control" placeholder="LastName" />
                <input type="text" ng-model="GetGender(client.Gender)" class="form-control" placeholder="Gender" />
                <input type="text" ng-model="currentClient.Age" class="form-control" placeholder="Age" />
                <input type="text" ng-model="currentClient.City" class="form-control" placeholder="City" />
                <div class="btn-group">
                    <button ng-click="addClient()" class="btn btn-default">Add</button>
                    <button ng-click="editClient()" class="btn btn-default">Edit</button>
                    <button ng-click="deleteClient()" class="btn btn-default">Delete</button>
                </div>
            </form>
            </div>
        </div>
</div>
